<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login/Signup</title>
  <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
  <link rel="stylesheet" href="index.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

  <div class="center">
    <input type="checkbox" name="toggle" id="toggle" />

    <label for="toggle" class="switch">
      <div class="mode">
        <div class="text">ctrl</div>
      </div>
      <div class="mode">
        <div class="text">save</div>
      </div>
      <div class="indicator left"></div>
      <div class="indicator right"></div>
    </label>
  </div>

  <div class="container" id="container">

    <!-- Signup Form -->
    <div class="form-container register-container">
      <form id="signupForm">
        <h1>Signup</h1>
        <input type="text" name="username" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Signup</button>
        <p class="error-message" id="signupError"></p>
      </form>
    </div>

    <!-- Login Form -->
    <div class="form-container login-container">
      <form id="loginForm">
        <h2>Login</h2>
        <input type="text" name="username" placeholder="Enter Username" required>
        <input type="password" name="password" placeholder="Enter Password" required>
        <button type="submit">Login</button>
        <p class="error-message" id="loginError"></p>
      </form>
    </div>

    <!-- Transition Overlay -->
    <div class="overlay-container">
      <div class="overlay">
        <img src="logo.gif" alt="Animated Logo" class="animated-logo"> <!-- âœ… GIF added back -->
        <div class="overlay-panel overlay-left">
          <h1>Welcome Back</h1>
          <p>If you have an account, log in here.</p>
          <button class="ghost" id="login">Login</button>
        </div>
        <div class="overlay-panel overlay-right">
          <h1>Create an Account</h1>
          <p>Join us by signing up.</p>
          <button class="ghost" id="register">Signup</button>
        </div>
      </div>
    </div>

  </div>

  <script>
    // Toggle between Login and Signup with smooth transition
    const registerButton = document.getElementById("register");
    const loginButton = document.getElementById("login");
    const container = document.getElementById("container");

    registerButton.addEventListener("click", () => {
      container.classList.add("right-panel-active");
    });

    loginButton.addEventListener("click", () => {
      container.classList.remove("right-panel-active");
    });

    // Handle Signup Submission
    $("#signupForm").submit(function (event) {
      event.preventDefault();

      $.ajax({
        type: "POST",
        url: "/signup",
        data: $(this).serialize(),
        dataType: "json",
        success: function (response) {
          if (response.success) {
            window.location.href = response.redirect;
          }
        },
        error: function (xhr) {
          $("#signupError").text(xhr.responseJSON.message);
        }
      });
    });

    // Handle Login Submission
    $("#loginForm").submit(function (event) {
      event.preventDefault();

      $.ajax({
        type: "POST",
        url: "/login",
        data: $(this).serialize(),
        dataType: "json",
        success: function (response) {
          if (response.success) {
            window.location.href = response.redirect;
          }
        },
        error: function (xhr) {
          $("#loginError").text(xhr.responseJSON.message);
        }
      });
    });
  </script>

</body>
</html>
